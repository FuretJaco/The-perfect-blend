<h4>Veuillez vous connecter pour avoir accès à votre session utilisateur! </h4>

<%= form_tag sessions_path do %>
	<div>
		<%= label_tag "login", "Login" %><br>
		<%= text_field_tag "login" %>
	</div>
	<div>
		<%= label_tag "password", "Password" %><br>
		<%= password_field_tag "password" %>
	</div>
	<%= submit_tag "Login" %>
<% end %>

